# Financial AI System Environment Configuration
# Copy this file to .env and fill in your actual values

# Real-time Market Data API Keys
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
POLYGON_API_KEY=your_polygon_api_key_here
IEX_CLOUD_API_KEY=your_iex_cloud_api_key_here
TWELVE_DATA_API_KEY=your_twelve_data_api_key_here

# News and Sentiment API Keys
NEWS_API_KEY=your_news_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here

# Data Source Configuration
YAHOO_FINANCE_ENABLED=true
DATABASE_URL=sqlite:///financial_ai.db
MODEL_SAVE_PATH=models/

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your_secret_key_here

# Logging
LOG_LEVEL=INFO

# Real-time Data Settings
CACHE_DURATION=300
UPDATE_FREQUENCY_MARKET_STATUS=60
UPDATE_FREQUENCY_PRICE_DATA=30
UPDATE_FREQUENCY_NEWS_SENTIMENT=300
UPDATE_FREQUENCY_TECHNICAL_INDICATORS=60
UPDATE_FREQUENCY_RISK_METRICS=120

# Model Configuration
PREDICTION_HORIZON_DAYS=30
TRAINING_LOOKBACK_DAYS=365

# Risk Management
MAX_PORTFOLIO_RISK=0.15
STOP_LOSS_PERCENTAGE=0.05
TAKE_PROFIT_PERCENTAGE=0.15

# Trading Configuration
DEFAULT_INITIAL_CAPITAL=100000
MAX_POSITION_SIZE=0.1
REBALANCE_FREQUENCY_DAYS=7

# Technical Analysis
SHORT_TERM_MA=20
LONG_TERM_MA=50
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30

# Sentiment Analysis
SENTIMENT_ANALYSIS_ENABLED=true
NEWS_SOURCES=reuters,bloomberg,cnbc,yahoo