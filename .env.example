# Financial AI System Environment Configuration - FREE Data Sources Only
# Copy this file to .env and customize as needed

# NO API KEYS REQUIRED - System uses only free, publicly available data sources

# Data Source Configuration
FREE_DATA_SOURCES_ENABLED=true
YAHOO_FINANCE_ENABLED=true
WEB_SCRAPING_ENABLED=true

# Database Configuration
DATABASE_URL=sqlite:///financial_ai.db
MODEL_SAVE_PATH=models/

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your_secret_key_here

# Logging
LOG_LEVEL=INFO

# Free Data Settings
CACHE_DURATION=300
UPDATE_FREQUENCY_MARKET_STATUS=60
UPDATE_FREQUENCY_PRICE_DATA=30
UPDATE_FREQUENCY_NEWS_SENTIMENT=300
UPDATE_FREQUENCY_TECHNICAL_INDICATORS=60
UPDATE_FREQUENCY_RISK_METRICS=120

# Rate Limiting (Conservative to avoid being blocked)
YAHOO_FINANCE_REQUESTS_PER_MINUTE=30
YAHOO_FINANCE_DELAY_BETWEEN_REQUESTS=2
WEB_SCRAPING_REQUESTS_PER_MINUTE=10
WEB_SCRAPING_DELAY_BETWEEN_REQUESTS=6

# Data Validation
MIN_DATA_POINTS=20
MAX_PRICE_CHANGE=0.50
MIN_VOLUME=1000
DATA_FRESHNESS_MINUTES=5